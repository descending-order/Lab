<%
page.layout = "news"
page.title = theme.news.title || __('news.title')
page.subtitle = theme.news.subtitle || __('news.subtitle')
page.banner_img = theme.news.banner_img
page.banner_img_height = theme.news.banner_img_height
page.banner_mask_alpha = theme.news.banner_mask_alpha
%>

<div class="list-group">
    <hr>
    <% var dateCursor %>
    <%
    site.posts.filter(function (post) {
      if (post.categories.length != 0) { return post.categories.data[0].name == theme.news.category }
      return false
    }).reverse().each(function (post) {
    %>
      <% if(date(post.date, "YYYY") !== dateCursor) { %>
        <% dateCursor = date(post.date, "YYYY") %>
        <p class="h5"><%= dateCursor %></p>
      <% } %>
      <a href="<%= url_for(post.path) %>" class="list-group-item list-group-item-action">
        <time><%= date(post.date, "MM-DD") %></time>
        <div class="list-group-item-title"><%= post.title %></div>
      </a>
    <% }) %>
  </div>
  
  <%- partial('_partials/paginator') %>
